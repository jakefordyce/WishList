<!DOCTYPE html>
<html>
  <head>
    <title>Wishlist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <div class="alert alert-success"><%= notice %><button type="button" class="close" data-dismiss="alert">&times;</button></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger"><%= alert %><button type="button" class="close" data-dismiss="alert">&times;</button></div>
    <% end %>
    <%= render 'layouts/header' %>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
