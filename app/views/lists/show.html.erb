<h3><%= @list.name %> </h3>

<%= link_to 'Edit', edit_list_path(@list) %>
<br />
<%= link_to 'New Item', new_item_path(list_id: @list.id)%>

<% @items.each do |item| %>
  <div>
    <%= item.name  %>
    <%= link_to 'Buy Here', item.url %>
    <%= item.instructions %>

    <% if user_signed_in? && list_belongs_to_user?(@list) %>
      <%= link_to 'edit', item %>
    <% end %>
    <% if user_signed_in? && list_belongs_to_user?(@list) %>
      <%= link_to 'delete', item_path, method: :delete %>
    <% end %>
  </div>
<% end %>

<% if user_signed_in? && !list_belongs_to_user?(@list)%>
  <%= render 'comments/form', comment: @comment, list_id: @list.id %>

  <%= render partial: 'comments/comment', collection: @comments %>
<% end %>
